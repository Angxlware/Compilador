; ENTRADA / SALIDA
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

Leer MACRO MESSAGE
	MOV AH,3Fh
    MOV BX,0000h
	MOV CX,0100h
	LEA DX,MESSAGE
	INT 21h
ENDM

EscribirCadena MACRO MESSAGE
	MOV AH,09
	LEA DX, MESSAGE
	INT 21h
ENDM

EscribirNumero MACRO MESSAGE
	MOV CL, MESSAGE
	ADD CL, 48
    MOV impresion, CL
    MOV AH, 2h
    MOV DL, impresion
    INT 21h
			
	MOV ah,02h
    MOV dl,0ah 
    INT 21h
    MOV ah,02h
    MOV dl,0dh 
    INT 21h
ENDM

